<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ImageStyle">
    <item name="android:layout_width">@dimen/CardHeight</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_gravity">right|center</item>
    <item name="android:src">@drawable/PlaceHolder</item>
  </style>
  <style name="NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>
  <style name="PrimaryText" parent="@android:style/TextAppearance.DeviceDefault">
    <item name="android:textSize">18sp</item>
    <item name="android:paddingTop">@dimen/TitlePaddingTop</item>
    <item name="android:paddingLeft">@dimen/TitlePaddingTop</item>
    <item name="android:lines">1</item>
    <item name="android:paddingRight">102dp</item>
    <item name="android:layout_gravity">top</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <style name="Subtitle" parent="PrimaryText">
    <item name="android:textSize">12sp</item>
    <item name="android:paddingTop">0dp</item>
  </style>
  <style name="SecondaryText" parent="@style/PrimaryText">
    <item name="android:textSize">10sp</item>
    <item name="android:paddingTop">0dp</item>
  </style>
  <style name="BaseObject" parent="Base.CardView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/CardHeight</item>
    <item name="android:elevation">10dp</item>
    <!--<item name="card_view:cardUseCompatPadding">true</item>
    <item name="card_view:cardCornerRadius">5dp</item>-->
    <item name="android:shadowRadius">5.4</item>
    <item name="android:colorBackground">@color/primaryLight</item>
  </style>
</resources>